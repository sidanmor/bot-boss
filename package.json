{
    "name": "bot-boss",
    "displayName": "Bot Boss - VS Code Instance Manager",
    "description": "Manage and monitor all your open VS Code instances",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/sidanmor/bot-boss.git"
    },
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "bot-boss.refreshInstances",
                "title": "Refresh VS Code Instances",
                "icon": "$(refresh)"
            },
            {
                "command": "bot-boss.focusInstance",
                "title": "Focus Instance"
            },
            {
                "command": "bot-boss.openWorkspaceInfo",
                "title": "Show Workspace Info"
            },
            {
                "command": "bot-boss.debugDetection",
                "title": "Debug Instance Detection"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "bot-boss-view",
                    "title": "Bot Boss",
                    "icon": "$(workspace-trusted)"
                }
            ]
        },
        "views": {
            "bot-boss-view": [
                {
                    "id": "vscodeInstancesExplorer",
                    "name": "VS Code Instances",
                    "when": "true"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "bot-boss.refreshInstances",
                    "when": "view == vscodeInstancesExplorer",
                    "group": "navigation"
                },
                {
                    "command": "bot-boss.debugDetection",
                    "when": "view == vscodeInstancesExplorer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "bot-boss.focusInstance",
                    "when": "view == vscodeInstancesExplorer && viewItem == vscodeInstance",
                    "group": "inline"
                },
                {
                    "command": "bot-boss.openWorkspaceInfo",
                    "when": "view == vscodeInstancesExplorer && viewItem == vscodeInstance",
                    "group": "context"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "@vscode/test-electron": "^2.3.2",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "ps-list": "^8.1.1"
    }
}